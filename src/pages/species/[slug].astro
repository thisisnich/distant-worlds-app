---
import BaseLayout from '../../layouts/BaseLayout.astro';
import '../../styles/wiki.css';
import { type CollectionEntry, render } from 'astro:content';

interface SpeciesModule {
    default: any;
    compiledContent(): string;
}

export async function getStaticPaths() {
    const speciesFiles = Object.entries(import.meta.glob<SpeciesModule>('../../content/species/*.md', { eager: true }));

    return speciesFiles.map(([path, species]) => {
        const slug = path.split('/').pop()?.replace('.md', '') || '';
        return {
            params: { slug },
            props: { species: species, slug },
        };
    });
}

interface Props {
    species: CollectionEntry<'species'>;
    slug: string;
}

const { species, slug } = Astro.props as Props;

// Get the full compiled markdown content
const { Content } = await render(species);

// Generate a title from the slug
const title = slug.split('_').map(word => 
    word.charAt(0).toUpperCase() + word.slice(1)
).join(' ');
---

<BaseLayout title={`${title} - Distant Worlds Species`}>
    <a href="/" class="back-button">‚Üê Back to Collection</a>

    <div class="wiki-container">
        <div class="wiki-content">
            {species.data.photos && species.data.photos.length > 0 && (
                <div class="photo-gallery">
                    {species.data.photos.map(photo => (
                        <img src={photo} alt={title} class="content-image" />
                    ))}
                </div>
            )}
            <Content />
        </div>
    </div>
</BaseLayout> 