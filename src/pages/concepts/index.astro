---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import '../../styles/wiki.css';

const concepts = await getCollection('concepts');
---

<BaseLayout title="Concepts - Distant Worlds">
    <div class="wiki-container">
        <a href="/" class="back-button">‚Üê</a>
        <div class="wiki-content">
            <h1>Concepts</h1>
            <p>Understand important ideas, theories, and phenomena that shape the Distant Worlds universe.</p>
            
            <div class="item-grid">
                {concepts.map((concept) => (
                    <div class="item-card">
                        <h3><a href={`/concepts/${concept.slug}`}>{concept.data.name}</a></h3>
                        <p class="description">{concept.data.description}</p>
                        {concept.data.origin && (
                            <p class="meta"><strong>Origin:</strong> {concept.data.origin}</p>
                        )}
                        {concept.data.category && (
                            <p class="meta"><strong>Category:</strong> {concept.data.category}</p>
                        )}
                    </div>
                ))}
            </div>
        </div>
    </div>
</BaseLayout> 