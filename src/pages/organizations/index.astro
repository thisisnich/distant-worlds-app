---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import '../../styles/wiki.css';

const organizations = await getCollection('organizations');
---

<BaseLayout title="Organizations - Distant Worlds">
    <div class="wiki-container">
        <a href="/" class="back-button">‚Üê</a>
        <div class="wiki-content">
            <h1>Organizations</h1>
            <p>Discover the guilds, associations, and organizations that shape the social and political landscape of the Distant Worlds universe.</p>
            
            <div class="item-grid">
                {organizations.map((org) => (
                    <div class="item-card">
                        <h3><a href={`/organizations/${org.slug}`}>{org.data.name}</a></h3>
                        <p class="description">{org.data.description}</p>
                        {org.data.type && (
                            <p class="meta"><strong>Type:</strong> {org.data.type}</p>
                        )}
                        {org.data.location && (
                            <p class="meta"><strong>Location:</strong> {org.data.location}</p>
                        )}
                        {org.data.purpose && (
                            <p class="meta"><strong>Purpose:</strong> {org.data.purpose}</p>
                        )}
                        {org.data.influence && (
                            <p class="meta"><strong>Influence:</strong> {org.data.influence}</p>
                        )}
                    </div>
                ))}
            </div>
        </div>
    </div>
</BaseLayout> 